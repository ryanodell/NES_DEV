{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "args": [
                "--directory=${workspaceFolder}/${config:PROJECT_PATH}"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make",
            "group": "build",
            "args": [
                "clean",
                "--directory=${workspaceFolder}/${config:PROJECT_PATH}"
            ]
        }
    ]
}
